<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.couchbase.mobile.app.CareMessage"
    tools:showIn="@layout/activity_care_message">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Schedule With:"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/textView1"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="Jerry Miller, MD-PCP (Internal Medicine)"
        android:textSize="18sp"
        tools:text="Jerry Miller, MD-PCP (Internal Medicine)"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView1"
        android:layout_alignEnd="@+id/textView1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="Date:"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:gravity="center_vertical"
        android:text="11/01/2017"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"
        android:text="Time:"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textViewDate"
        android:layout_alignEnd="@+id/textViewDate"
        android:layout_alignTop="@+id/textView5"
        android:text="Available Times"
        android:gravity="center_vertical"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:text="Schedule >"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>
